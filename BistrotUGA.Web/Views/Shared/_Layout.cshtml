<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <header>
        <h1>Vito Resto</h1>
        <nav>
            <ul>
                <li>
                    @Html.ActionLink("Accueil", "Index", "Home")
                </li>
                <li>
                    <a href="#">Restaurant</a>
                </li>
                <li>
                    @Html.ActionLink("Menu&Vin", "Create", "Menu")
                </li>
                <li>
                    <a href="#">Reservation</a>
                </li>
                <li>
                    <a href="#">Contact</a>
                </li>
            </ul>
        </nav>
    </header>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer>
        <div class="top">
            <div>
                <div>
                    <p>Où nous trouver ?</p>
                    <p><span>&#128204;</span> Route du campus</p>
                    <p>Campus Universitaire de Grenoble</p>
                    <p><span>&#9742;</span> 00 11 22 33 44</p>
                </div>
            </div>
        </div>
        <div class="bottom">
            <div class="bar">
                <p>Bar</p>
                <p>Ouvert du lundi au samedi</p>
                <p>de 7h00 à 00h00</p>
            </div>
            <div class="restaurant">
                <p>Restaurant</p>
                <p>Ouvert du lundi au samedi</p>
                <p>de 12h00 à 14h00 et de 19h00 à 22h30</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
